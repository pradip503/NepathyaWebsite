
<div class="row">
    <div class="col-sm-12">
        <h1 style="text-align: center"> Add Semester</h1>
                <center><span style="color: red;"> You cannot delete semester so be carefull while adding semester!</span></center>


        <form action="/admin/semester" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="semester">Semester Name :</label>
                <select name="semester" id="semester" class="form-control">
                
                    <option value="first">1st Semester</option>
                    <option value="second">2nd Semester</option>
                    <option value="third">3rd Semester</option>
                    <option value="four">4th Semester</option>
                    <option value="five">5th Semester</option>
                    <option value="six">6th Semester</option>
                    <option value="seven">7th Semester</option>
                    <option value="eight">8th Semester</option>

                </select>
            </div>

            <div class="form-group">
                <label for="faculty">Faculty :</label>
                <select name="facultyId" id="faculty" class="form-control">
                    {{#each faculties}}
                    <option value="{{_id}}">{{ name }}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Add Semester</button>


        </form>
    </div>



{{!-- -------------------------------------------------------------------------------------------------------- --}}
    
    
    
    <div class="col-sm-12"> 
        <h1 style="text-align: center"> All Semesters</h1>

        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Faculty</th>
                    <th>Semesters</th>
                </tr>
            </thead>

            <tbody>

                {{#each faculties}}
                <tr>
                    <td>{{name}}</td>
                    <td>
                        {{#each semesters}}

                        <div class="form-check">
                            <label class="form-check-label" for="semester">{{ this }}</label>
                        </div>
                            
                        {{/each}}
                    </td>
                </tr>
                {{/each}}

            </tbody>

        </table>
    </div>
</div>

